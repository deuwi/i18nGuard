{
  "name": "@i18nguard/reporter",
  "version": "1.0.3",
  "description": "Report generators for i18nGuard (JSON, SARIF, HTML)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup && tsc -p tsconfig.json --emitDeclarationOnly",
    "dev": "tsup --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "i18n",
    "reporting",
    "sarif",
    "html"
  ],
  "author": "i18nGuard Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deuwi/i18nguard.git",
    "directory": "packages/reporter"
  },
  "bugs": {
    "url": "https://github.com/deuwi/i18nguard/issues"
  },
  "homepage": "https://github.com/deuwi/i18nguard#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
  "@i18nguard/core": "^1.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "tsup": "^8.0.0",
    "vitest": "^1.0.0"
  }
}