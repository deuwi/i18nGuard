{
  "name": "@i18nguard/adapters",
  "version": "1.0.3",
  "description": "Framework adapters for i18nGuard (i18next, FormatJS, Lingui)",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./i18next": {
      "import": "./dist/i18next.js",
      "types": "./dist/i18next.d.ts"
    },
    "./formatjs": {
      "import": "./dist/formatjs.js",
      "types": "./dist/formatjs.d.ts"
    },
    "./lingui": {
      "import": "./dist/lingui.js",
      "types": "./dist/lingui.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup && tsc -p tsconfig.json --emitDeclarationOnly",
    "dev": "tsup --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "i18n",
    "adapters",
    "i18next",
    "formatjs",
    "lingui"
  ],
  "author": "i18nGuard Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deuwi/i18nguard.git",
    "directory": "packages/adapters"
  },
  "bugs": {
    "url": "https://github.com/deuwi/i18nguard/issues"
  },
  "homepage": "https://github.com/deuwi/i18nguard#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
  "@i18nguard/core": "^1.0.3",
    "glob": "^11.0.3",
    "globby": "^14.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}